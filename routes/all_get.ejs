<!DOCTYPE html>
<html>
<head>
	<title>www.education.com</title>
	<style>
		/* .all_blogs{
			height: 500px;
			width: 60%;
			background-color: #8f4509;	
			margin: auto;	
		} */
		ul{
			list-style-type: none;
			overflow: hidden;
			border: 1px solid black;
			background-color: green;
		}
		li{
			float: right;
		}
		li a {
		  display: block;
		  color: brown;
		  font-size: 22px;
		  text-align: center;
		  padding: 18px 20px;
		  text-decoration: none;
		}
		li a:hover:not(.active) {
  			background-color: black;
		}
		li a.active{
			color: white;
			background-color: purple;
		}
		.runDiv{
			height: 200px;
			width: 50%;
			background-color: orange;
		}
	</style>
</head>
<body bgcolor="sky-blue">
	<h1><center> </center></h1>
	<ul>
	  <li><a class="active" href="all_get">Get Blogs</a></li>
	  <li><a href="add_blog">Post Blog</a></li>
	  <li><a href="home">Home</a></li>
	</ul>
	<div class="all_blogs"> <h1><center> All Blogs</center></h1><br><br>
	<% for (let i of data) { %>
		<center><div class="runDiv">
			<h2> <%= i.email %> </h2>
			<h3> <%= i.title %> </h3>
			<p> <%= i.blog_text %> </p>
			<p> <%= i.description %> </p>
		</div></center>
		<% } %>
	</div>
	<!-- <center><input type="button" name="name" value="Submit"></center> -->
</body>
</html>